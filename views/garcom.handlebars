<div class="text-center mt-5">
  <h1>Criar pedido</h1>
</div>
<form action="/garcom/criarpedido" method="POST">
  <label class="form-label" for="nome">Número da Mesa</label>
  <input type="number" class="form-control" name="nome" required>


<label class="form-label" for="prato">Bebidas</label>
  <select name="prato" class="form-select">
    <option value="nenhum" selected>Escolha um Prato</option>
    {{#each prato}}
      <option value="{{this.preco}}">{{this.nome}} R${{this.preco}}</option>
    {{/each}}
  </select>

    <label class="form-label" for="bebida">Bebidas</label>
    <select name="bebida" class="form-select">
    <option value="nenhum" selected>Escolha</option>
    {{#each bebida}}
      <option value="{{this.preco}}">{{this.nome}} -- R${{this.preco}}</option>
    {{/each}}
  </select>


  <label class="form-label" for="preco">Preço</label>
  <input type="number" id="precoInput" class="form-control" name="preco" readonly>


  <button class="btn btn-outline-success me-2" type="submit">Enviar pedido</button>
</form>
