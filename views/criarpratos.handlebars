<h1 class="mb-4">Rota Criar Pratos</h1>

<form action="/pratos/criar" method="POST">
  <div class="mb-3">
    <label for="nome" class="form-label">Nome do Prato</label>
    <input name="nome" class="form-control" type="text" placeholder="Digite o nome do prato" required>
  </div>

  <div class="mb-3">
    <label for="descricao" class="form-label">Descrição</label>
    <textarea name="descricao" class="form-control" rows="3" placeholder="Digite a descrição do prato" required></textarea>
  </div>

  <div class="mb-3">
    <label for="preco" class="form-label">Preço</label>
    <input name="preco" class="form-control" type="text" placeholder="Digite o preço do prato" required>
  </div>

  <div class="mb-3">
    <label for="imagem" class="form-label">Imagem</label>
    <input name="imagem" class="form-control" type="text" placeholder="URL da imagem" required>
  </div>

  <div class="mb-3">
    <label for="ingredientes" class="form-label">Ingredientes</label>
    <textarea name="ingredientes" class="form-control" rows="3" placeholder="Liste os ingredientes" required></textarea>
  </div>

  <div class="d-grid gap-2">
    <button type="submit" class="btn btn-success">Criar Prato</button>
    <a href="/pratos" class="btn btn-primary">Voltar</a>
  </div>
</form>

