<div class="container">
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
    <a href="/pratos/criar" class="btn btn-primary">Criar Prato</a>
  </div>

  <div class="mb-4"></div> <!-- EspaÃ§o adicional -->
  
  <div class="row">
    {{#each dados}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="{{this.imagem}}" class="card-img-top" alt="Imagem do prato">
          <div class="card-body">
            <h5 class="card-title">{{this.nome}}</h5>
            <p class="card-text">{{this.ingredientes}}</p>
            <p class="card-text"><strong>R${{this.preco}} </strong> </p>
            <div class="d-flex justify-content-between">
              <a href="/pratos/editar/{{this.id}}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
              </a>
              <a href="/pratos/deletar/{{this.id}}" class="btn btn-danger">
                <i class="bi bi-trash"></i> Deletar
              </a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>