<br />
<div class="d-flex justify-content-center align-items-center">
  <a href="#pratos" class="btn btn-outline-primary mx-2">Pratos</a>
  <a href="#bebidas" class="btn btn-outline-primary mx-2">Bebidas</a>
</div>
<br>

<div class="container">
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
    <a href="/pratos/criar" class="btn btn-outline-primary">
      Criar Prato
      <i class="bi bi-plus"></i>
    </a>
  </div>

  <div class="mb-4"></div>
     <div class="text-center mt-5 mb-4">
      <h1>Pratos</h1>
    </div>
  <div class="row">
    {{#each dados}}
      <div class="col-md-4 mb-4">
        <div
          class="card"
          style="display: flex; flex-direction: column; height: 100%;"
        >
          <img
            src="{{this.imagem}}"
            class="card-img-top"
            alt="Imagem do prato"
            style="height: 200px; object-fit: cover;"
          />
          <div class="card-body d-flex flex-column" style="flex-grow: 1;">
            <h5 class="card-title">{{this.nome}}</h5>
            <p class="card-text">{{this.ingredientes}}</p>
            <div
              class="d-flex justify-content-between align-items-end mt-auto flex-wrap"
            >
              <p class="card-text"><strong>R${{this.preco}} </strong></p>
              <div class="d-flex">
                <a
                  href="/pratos/editar/{{this.id}}"
                  class="btn btn-outline-warning me-2"
                >
                  <i class="bi bi-pencil"></i>
                  Editar
                </a>
                <a
                  href="/pratos/deletar/{{this.id}}"
                  class="btn btn-outline-danger"
                >
                  <i class="bi bi-trash"></i>
                  Deletar
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    <hr />
     <div class="text-center mt-3 mb-2">
      <h1 id="bebidas">Bebidas</h1>
    </div>
    {{#each bebidas}}
      <div class="col-md-4 mb-4">
        <div
          class="card"
          style="display: flex; flex-direction: column; height: 100%;"
        >
          <img
            src="{{this.imagem}}"
            class="card-img-top"
            alt="Imagem do prato"
            style="height: 200px; object-fit: cover;"
          />
          <div class="card-body d-flex flex-column" style="flex-grow: 1;">
            <h5 class="card-title">{{this.nome}}</h5>
            <p class="card-text">{{this.ingredientes}}</p>
            <div
              class="d-flex justify-content-between align-items-end mt-auto flex-wrap"
            >
              <p class="card-text"><strong>R${{this.preco}} </strong></p>
              <div class="d-flex">
                <a
                  href="/pratos/editar/{{this.id}}"
                  class="btn btn-outline-warning me-2"
                >
                  <i class="bi bi-pencil"></i>
                  Editar
                </a>
                <a
                  href="/pratos/deletar/{{this.id}}"
                  class="btn btn-outline-danger"
                >
                  <i class="bi bi-trash"></i>
                  Deletar
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>